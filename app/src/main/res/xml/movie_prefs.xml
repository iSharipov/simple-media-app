<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <PreferenceCategory android:title="@string/pref_movie_label">
        <ListPreference
            android:entries="@array/pref_country_label"
            android:entryValues="@array/pref_country_value"
            android:key="@string/pref_movie_region_key"
            android:title="@string/pref_country_label" />

        <ListPreference
            android:entries="@array/pref_language_label"
            android:entryValues="@array/pref_language_value"
            android:key="@string/pref_movie_language_key"
            android:title="@string/pref_language_label" />
    </PreferenceCategory>
</PreferenceScreen>